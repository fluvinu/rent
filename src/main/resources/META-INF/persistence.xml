<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

  <!-- Persistence unit for the Rent Application -->
  <persistence-unit name="rentdbPersistence">
    <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <!-- Database Connection Settings -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/rentdb?createDatabaseIfNotExist=true" />
	  <property name="jakarta.persistence.jdbc.user" value="${DB_USER:root}" />
	  <property name="jakarta.persistence.jdbc.password" value="${DB_PASSWORD:tiger}" />
      

      <!-- Hibernate Settings -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.hbm2ddl.auto" value="update" />

      <!-- Cache Settings -->
      <property name="hibernate.cache.use_second_level_cache" value="true" />
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhcacheRegionFactory"/>
    </properties>
  </persistence-unit>

  <!-- Persistence unit for a different project or module -->

</persistence>